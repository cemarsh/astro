---
import '../styles/global.css';

interface Props {
	title?: string;
	description?: string;
}

const { title = 'Astro Exploration', description = 'Exploring Astro capabilities' } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="description" content={description} />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="min-h-screen bg-slate-900 text-slate-100">
		<nav class="border-b border-slate-700 bg-slate-800">
			<div class="mx-auto max-w-4xl px-4 py-4">
				<div class="flex items-center justify-between">
					<a href="/" class="text-xl font-bold text-white hover:text-purple-400">Astro Lab</a>
					<div class="flex gap-6">
						<a href="/" class="hover:text-purple-400">Home</a>
						<a href="/blog" class="hover:text-purple-400">Blog</a>
						<a href="/components" class="hover:text-purple-400">Components</a>
					</div>
				</div>
			</div>
		</nav>
		<main class="mx-auto max-w-4xl px-4 py-8">
			<slot />
		</main>
		<footer class="border-t border-slate-700 bg-slate-800 mt-auto">
			<div class="mx-auto max-w-4xl px-4 py-4 text-center text-slate-400">
				Built with Astro + React + Vue + Svelte + Tailwind
			</div>
		</footer>
	</body>
</html>
